<!-- Main Site -->
<main id="site-main">
    <div class="container">
        <div class="box-nav d-flex justify-between">
            <div class="filter">
                <a href="/home"><i class="fas fa-angle-double-left"></i>All users</a>
            </div>
        </div>
        <div class="form-title text-center">
            <h2 class="text-dark">Update User</h2>
            <span class="text-light">Use the below form to create new account</span>
        </div>

        <!-- add user form -->
         <!-- form handling-->
 <form method="POST" id="update_user">
    <div class="new_user">

        <!-- Writing Data-->
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="<%= user._id%>">
            <input type="text" name="name" value="<%= user.name%>" placeholder="Jan Kowalski">
        </div>
        <div class="form-group">
         <label for="Email" class="text-light">Email</label>
         <input type="text" name="email" value="<%= user.email%>" placeholder="jan.kowalski@gmail.com">
         </div>
         <div class="form-group">
            <label for="position" class="text-light">Position</label>
            <input type="text" name="position" value="<%= user.position%>" placeholder="Stanowisko">
        </div>
        <div class="form-group">
            <label for="date" class="text-light">Data urodzenia</label>
            <input type="date" name="date" value="<%= user.date%>">
        </div>
          <!-- Writing Data-->

         <!-- Choosing -->
         <div class="form-group">
             <label for="gender" class="text-light">Gender</label>
             <div class="radio inline">
                 <input type="radio" name="gender" value="Male" <%= user.gender == 'Male'? 'checked':"" %>>
                 <label for="gender" class="radio-label">Male</label>
             </div>
             <div class="radio inline">
                 <input type="radio" name="gender" value="Female" <%= user.gender == 'Female'? 'checked':"" %>>
                 <label for="gender" class="radio-label">Female</label>
             </div>
         </div>
         <div class="form-group">
             <label for="status" class="text-light">Active</label>
             <div class="radio inline">
                 <input type="radio" name="status" value="Active" <%= user.status == 'Active'? 'checked':"" %>>
                 <label for="status" class="radio-label">Active</label>
             </div>
             <div class="radio inline">
                 <input type="radio" name="status" value="Inactive" <%= user.status == 'Inactive'? 'checked':"" %>>
                 <label for="status" class="radio-label">Inactive</label>
             </div>
         </div>

         <input type="submit" class="btn btn-primary" value="Submit">
         <!-- Choosing -->

    </div>
 </form>
 <!-- form handling-->
        
    </div>
</main>
<!-- Main Site -->

