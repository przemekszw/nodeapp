 <!-- form handling-->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">

        <!-- Writing Data-->
        <div class="form-group">
            <label for="name" class="text-light">Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="name" value="" placeholder="Jan Kowalski">
        </div>
        <div class="form-group">
         <label for="Email" class="text-light">Email</label>
         <input type="text" name="email" value="" placeholder="jan.kowalski@gmail.com">
         </div>
         <div class="form-group">
            <label for="position" class="text-light">Position</label>
            <input type="text" name="position" value="" placeholder="Stanowisko">
        </div>
        <div class="form-group">
            <label for="date" class="text-light">Data urodzenia</label>
            <input type="date" name="date" value="">
        </div>
          <!-- Writing Data-->

         <!-- Choosing -->
         <div class="form-group">
             <label for="gender" class="text-light">Gender</label>
             <div class="radio inline">
                 <input type="radio" name="gender" value="Male">
                 <label for="gender" class="radio-label">Male</label>
             </div>
             <div class="radio inline">
                 <input type="radio" name="gender" value="Female">
                 <label for="gender" class="radio-label">Female</label>
             </div>
         </div>
         <div class="form-group">
             <label for="status" class="text-light">Active</label>
             <div class="radio inline">
                 <input type="radio" name="status" value="Active">
                 <label for="status" class="radio-label">Active</label>
             </div>
             <div class="radio inline">
                 <input type="radio" name="status" value="Inactive">
                 <label for="status" class="radio-label">Inactive</label>
             </div>
         </div>
         <div class="form-group">
         <input type="submit" class="btn btn-primary" value="Submit">
        </div>
         <!-- Choosing -->

    </div>
 </form>
